{
    "name": "hapi-maily",
    "version": "2.0.0",
    "description": "An email service that generates html email templates using mjml, then sends the email to the requested user",
    "main": "index.js",
    "repository": "git@github.com:joshferrell/hapi-maily.git",
    "author": {
        "name": "Josh Ferrell",
        "url": "https://gitter.im/hapi-maily/Lobby"
    },
    "license": "MIT",
    "private": true,
    "jest": {
        "collectCoverageFrom": [
            "src/**/**.js",
            "!src/**/index.js"
        ]
    },
    "scripts": {
        "start": "cross-env NODE_ENV=local nodemon src/server.js --exec babel-node | bunyan",
        "lint": "eslint src/**",
        "build": "babel src -d build --copy-files",
        "coverage": "jest --coverage",
        "test": "jest --watchAll",
        "test:ci": "jest --coverage && cat ./coverage/lcov.info | coveralls",
        "deploy:local": "docker-compose up -d --build",
        "deploy:clean": "docker-compose down --rmi local"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.0.2",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "coveralls": "^3.0.0",
        "cross-env": "^5.1.1",
        "eslint": "^4.11.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jest": "^21.3.2",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.4.0",
        "jest": "^21.2.1",
        "nodemailer-stub-transport": "^1.1.0",
        "nodemon": "^1.12.1"
    },
    "dependencies": {
        "boom": "^7.1.1",
        "bunyan": "^1.8.12",
        "common-tags": "^1.4.0",
        "dotenv-safe": "^4.0.4",
        "glue": "4.2.0",
        "good": "^7.3.0",
        "good-bunyan": "^1.3.0",
        "good-squeeze": "^5.0.2",
        "hapi": "^16.6.2",
        "hapi-maily-widgets": "1.1.3",
        "hapi-swagger": "^8.0.0",
        "html-minifier": "^3.5.6",
        "inert": "4.2.1",
        "joi": "^13.0.2",
        "mjml": "^3.3.5",
        "moment": "^2.19.2",
        "nodemailer": "^4.4.0",
        "pkginfo": "^0.4.1",
        "prop-types": "^15.6.0",
        "ramda": "^0.25.0",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "vision": "4.1.1"
    }
}
